---
import '../styles/global.css';

const {
  title = 'Shievon',
  description = 'Shievon is a next-generation ecosystem unifying commerce, careers, and community.',
  ogImage = '/og-card.svg',
} = Astro.props;
---

<html lang="en" class="scroll-smooth bg-night text-slate-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content="https://shievon.com" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <slot name="head" />
  </head>
  <body class="bg-night font-sans antialiased">
    <div class="relative min-h-screen overflow-hidden">
      <div class="pointer-events-none absolute inset-0 opacity-70 mix-blend-screen">
        <div class="absolute -top-1/3 left-1/2 h-[40rem] w-[40rem] -translate-x-1/2 rounded-full bg-fire/20 blur-[160px]"></div>
        <div class="absolute top-1/2 left-1/3 h-[32rem] w-[32rem] -translate-x-1/2 rounded-full bg-ember/15 blur-[200px]"></div>
      </div>
      <main class="relative z-10">
        <slot />
      </main>
    </div>
  </body>
</html>